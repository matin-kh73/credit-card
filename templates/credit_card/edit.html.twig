{% extends 'base.html.twig' %}

{% block title %}Edit {{ creditCard.name }}{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="card">
                    <div class="card-header">
                        <h1 class="h3 mb-0">Edit Credit Card Details</h1>
                    </div>
                    <div class="card-body">
                        <div class="mb-4">
                            <h2>{{ creditCard.name }}</h2>
                            <p class="text-muted">{{ creditCard.bank.name }}</p>
                        </div>

                        {% if errors is defined and errors|length > 0 %}
                            <div class="alert alert-danger">
                                <ul class="mb-0">
                                    {% for field, message in errors %}
                                        <li>{{ message }}</li>
                                    {% endfor %}
                                </ul>
                            </div>
                        {% endif %}

                        {{ form_start(form) }}
                        <div class="mb-3">
                            {{ form_row(form.name, {'attr': {'class': errors.name is defined ? 'is-invalid' : ''}}) }}
                            {% if errors.name is defined %}
                                <div class="invalid-feedback">{{ errors.name }}</div>
                            {% endif %}
                        </div>
                        <div class="mb-3">
                            {{ form_row(form.description, {'attr': {'class': errors.description is defined ? 'is-invalid' : ''}}) }}
                            {% if errors.description is defined %}
                                <div class="invalid-feedback">{{ errors.description }}</div>
                            {% endif %}
                        </div>
                        <div class="mb-3">
                            {{ form_row(form.annualCharges, {'attr': {'class': errors.annualCharges is defined ? 'is-invalid' : ''}}) }}
                            {% if errors.annualCharges is defined %}
                                <div class="invalid-feedback">{{ errors.annualCharges }}</div>
                            {% endif %}
                        </div>
                        <div class="mt-4">
                            <button type="submit" class="btn btn-primary">Save Changes</button>
                            <a href="{{ path('app_credit_cards') }}" class="btn btn-secondary">Cancel</a>
                        </div>
                        {{ form_end(form) }}

                        <div class="mt-4">
                            <h3>Current Values</h3>
                            <table class="table">
                                <tr>
                                    <th>Name</th>
                                    <td>{{ creditCard.name }}</td>
                                </tr>
                                <tr>
                                    <th>Description</th>
                                    <td>{{ creditCard.description|default('No description') }}</td>
                                </tr>
                                <tr>
                                    <th>Annual Charges</th>
                                    <td>{{ creditCard.annualCharges }}â‚¬</td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}